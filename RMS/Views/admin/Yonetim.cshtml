<script>
    $(document).ready(function () {
        $(".ds-btn a").click(function () {
            var target = $(this).data("target");
            $(".section").hide();
            $(target).show();
        });
    });
</script>
<script>
    $(document).ready(function () {
        // Butonlara tıklanınca section'ları açma/kapatma işlevini tanımlayın
        $('.btn[data-toggle="collapse"]').click(function () {
            var target = $(this).data('target'); // Tıklanan butonun hedef section'ı
            $(target).collapse('toggle'); // Hedef section'ı açma/kapatma işlemi
        });
    });
</script>





<script>
    function toggleDiv(divId) {
        var div = document.getElementById(divId);
        var control = 0;
        if (div.style.display === "none") {
            div.style.display = "block"; // Div'i görünür yap

            $('#buton-panel').parent().removeClass();
            $('#buton-panel').parent().addClass('col-xl-4 col-sm-12 mb-4');
        }


    }
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function toggled(divId) {
        var div = $("#" + divId);

        if (div.is(":visible")) {
            // Görünürse, animasyonla gizle
            div.fadeOut("normal", function () {
                // Animasyon tamamlandıktan sonra sınıf değiştirme işlemini gerçekleştir
                $('#buton-panel').parent().removeClass().addClass('col-xl-12 d-flex justify-content-center');
            });
        } else {
            // Görünmüyorsa, animasyonla göster
            div.fadeIn("slow");
        }
    }
</script>

