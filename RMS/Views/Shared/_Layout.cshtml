$(document).ready(function() {
    $("#Cikiş").click(function() {
        $.ajax({
            url: '@Url.Action("Logout", "Home")', // Controller ve metodunuzu belirtin
            type: 'GET', // veya 'POST' olarak değiştirebilirsiniz
            dataType: 'json',
            success: function(result) {
                // Controller metodunun dönüş değerini alın
                $("#result").html(result); // Sonucu result elementine yerleştirin
            },
            error: function() {
                $("#result").html("Bir hata oluştu");
            }
        });
    });
});
    </script>






